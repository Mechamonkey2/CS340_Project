<form>
    <h3 class="heading">Data</h3>
        <table class="data">
			<tr>
				<td> Recovery Type ID</td>
				<td> Name </td>
				<td> Description </td>
			</tr>
			{{#each Recovery_Types}}
				<tr>
					<td> {{recoveryTypeID}} </td>
					<td> {{name}} </td>
					<td> {{description}} </td>
				</tr>
			{{/each}}
        </table>
</form>

<h2 class="heading">Edit Data</h2>
<form>
	<table class="data">
		<tr>
			<td> Recovery Type ID<input type ="text" id="recoveryTypeID" name="recoveryTypeID"> </td>
		</tr>
		<tr>
			<td> Name <input type ="text" id="name" name="name"> </td>
		</tr>
		<tr>
			<td> Description <input type ="text" id="description" name="description"> </td>
		</tr>
		<tr>
			<th>  <input type="submit" value="Edit"> </th>
		</tr>
    </table>
</form>
    
<h2 class="heading"> Remove Data </h2>
<form>
    <table class="data">
        <tr>
			<td>
				Recovery Type ID <input type ="text" id="recoveryTypeID" name="recoveryTypeID">
			</td>
        </tr>
        <tr>
			<th>  <input type="submit" value="Remove"> </th>
        </tr>
      </table>
</form>

<h2 class="heading"> Search Data </h2>
<form  action="/Recovery_Types" method="POST">
    <table class="data">
        <tr>
			<td>
				<select name="searchData" id="searchData">
					<option value="recoveryTypeID">Recovery Type ID</option>
					<option value="name">Name</option>
					<option value="description">Description</option>
				</select> <input type ="text" id="searchDataAmount" name="searchDataAmount">
			</td>
        </tr>
        <tr>
			<th>  <input type="submit" value="Search"> </th>
        </tr>
    </table>
</form>
